<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".th_muokattava_lajiFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_otsikko_th_muokattava_laji"
            android:layout_width="381dp"
            android:layout_height="62dp"
            android:layout_marginTop="32dp"
            android:text="@string/tv_otsikko_th_muokattava_laji"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/bt_vahvista_th_muokattava_laji"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_otsikko_th_muokattava_laji">

            <RadioButton
                android:id="@+id/rb_tennis_th_muokattava_laji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/rb_tennis_th_muokattava_laji" />

            <RadioButton
                android:id="@+id/rb_sulkapallo_th_muokattava_laji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/rb_sulkapallo_th_muokattava_laji" />
        </RadioGroup>

        <Button
            android:id="@+id/bt_vahvista_th_muokattava_laji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/btn_teema3"
            android:layout_marginBottom="32dp"
            android:text="@string/bt_vahvista_th_muokattava_laji"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="104dp"
            android:layout_height="69dp"
            android:layout_marginBottom="42dp"
            android:src="@drawable/tennispallo"
            app:layout_constraintBottom_toBottomOf="@+id/radioGroup2"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup2"
            app:layout_constraintHorizontal_bias="0.56"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="86dp"
            android:layout_height="67dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="84dp"
            android:src="@drawable/sulkapallo"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup2"
            app:layout_constraintTop_toTopOf="@+id/radioGroup2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
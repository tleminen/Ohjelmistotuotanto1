<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".toimip_poistoFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tw_PoistoTeksti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="@string/tw_tpHaluatkoPoistaaTeksti"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#D34752"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/bt_PoistoKylla"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45" />

        <Button
            android:id="@+id/bt_PoistoKylla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:background="@drawable/btn_teema4"
            android:text="@string/bt_tpPoistoKylla"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.69" />

        <Button
            android:id="@+id/bt_PoistoTakaisinNappi"
            android:layout_width="158dp"
            android:layout_height="48dp"
            android:minHeight="48dp"
            android:background="@drawable/btn_teema8"
            android:text="@string/bt_tpPoistoPalaaAlkuIkkuna"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bt_PoistoKylla"
            app:layout_constraintVertical_bias="0.26" />

        <TextView
            android:id="@+id/tvPoistettavanNimi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/bt_PoistoKylla"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tw_PoistoTeksti"
            app:layout_constraintVertical_bias="0.110000014" />

        <ImageView
            android:id="@+id/imageView37"
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:src="@drawable/toimp_progressbar3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".th_kentta_lisaysFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_Otsikko_lisaaKentta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/tw_otsikko_kenttaLisays"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RadioGroup
            android:id="@+id/radioGroup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Otsikko_lisaaKentta"
            app:layout_constraintVertical_bias="0.100000024">

            <RadioButton
                android:id="@+id/rbTennis_KenttaLisays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/rb_tennis_th_muokattava_laji" />

            <RadioButton
                android:id="@+id/rb_Sulkapallo_kentta_lisays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="@string/rb_sulkapallo_th_muokattava_laji" />

        </RadioGroup>

        <EditText
            android:id="@+id/etTuntihinta_kenttaLisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="@string/et_text_tuntihinta_kenttaLisays"
            android:inputType="text"
            android:minHeight="48dp"
            android:textAlignment="center"
            android:textColorHint="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup3" />

        <EditText
            android:id="@+id/etKentanNimi_kenttaLisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="@string/et_text_kentanNimi_kenttaLisays"
            android:inputType="text"
            android:textColorHint="@color/black"
            android:minHeight="48dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etTuntihinta_kenttaLisa" />

        <Button
            android:id="@+id/btLisaaKentta"
            android:layout_width="107dp"
            android:layout_height="48dp"
            android:layout_marginBottom="112dp"
            android:background="@drawable/btn_teema2"
            android:minHeight="48dp"
            android:text="@string/bt_text_kenttaLisays_LisaaKentta"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView22"
            android:layout_width="105dp"
            android:layout_height="70dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/tennispallo"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup3"
            app:layout_constraintHorizontal_bias="0.543"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Otsikko_lisaaKentta" />

        <ImageView
            android:id="@+id/imageView23"
            android:layout_width="85dp"
            android:layout_height="67dp"
            android:layout_marginTop="96dp"
            android:src="@drawable/sulkapallo"
            app:layout_constraintEnd_toEndOf="@+id/radioGroup3"
            app:layout_constraintHorizontal_bias="0.479"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Otsikko_lisaaKentta" />

        <ImageView
            android:id="@+id/imageView21"
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:src="@drawable/th_progressbar1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
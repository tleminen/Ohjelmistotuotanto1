        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:minHeight="48dp">

        <TextView
            android:id="@+id/tv_thMuokattavaKenttaItemLaji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
